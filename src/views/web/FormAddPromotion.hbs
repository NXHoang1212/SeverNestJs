        <form method="post" action="/cpanel/admin/AddPromotion" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-12">
                    <div class="tile">
                        <h3 class="tile-title">Tạo mới mã giảm giá</h3>
                        <div class="tile-body">
                            <div class="row element-button">
                                <div class="col-sm-2">
                                    <a class="btn btn-add btn-sm" href="#">
                                        <i class="fas fa-folder-plus"></i> Thêm nhà cung cấp</a>
                                </div>
                                <div class="col-sm-2">
                                    <a class="btn btn-add btn-sm"><i class="fas fa-folder-plus"></i> Thêm danh mục</a>
                                </div>
                                <div class="col-sm-2">
                                    <a class="btn btn-add btn-sm"><i class="fas fa-folder-plus"></i> Thêm tình trạng</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label">Tên cửa hàng</label>
                                    <input class="form-control" type="text" name="Tilte" id="Tilte">
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Tên giảm giá</label>
                                    <input class="form-control" type="text" name="name" id="name">
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Tên của mã giảm giá QR</label>
                                    <input class="form-control" type="text" name="nameQR" id="nameQR">
                                </div>
                            </div>
                            <div>
                                <label class="control-label">Ảnh sản phẩm</label>
                                <div>
                                    <input type="file" name="image" id="image" onchange="loadFile(event);" /> <br />
                                </div>
                                <div>
                                    <img width="250" height="250" id="img-display" src="{{promtion.image}}">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label">Giá giảm tiền</label>
                                    <input class="form-control" type="text" name="price" id="price">
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Ngày khởi tạo</label>
                                    <input class="form-control" type="text" name="start" id="start">
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label">Ngày hết hạn mã giảm giá</label>
                                    <input class="form-control" type="text" name="end" id="end">
                                </div>
                            </div>
                        </div>
                        <div>
